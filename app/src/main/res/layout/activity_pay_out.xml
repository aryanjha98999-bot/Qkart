<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="5dp"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".PayOutActivity">


    <ImageView
        android:id="@+id/backicon2"
        android:layout_width="64dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FFEB3B"
        android:backgroundTintMode="add"
        android:foregroundTint="@android:color/transparent"
        android:src="@drawable/baseline_arrow_circle_left_24"
        app:tint="@android:color/holo_orange_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/yeonsungregular"
        android:text="Private Details"
        android:textColor="#77C328"
        android:textSize="34sp"
        android:textStyle="bold">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/profiletext"
        android:elevation="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/yeonsungregular"
            android:gravity="center"
            android:text="Name"
            android:textColor="#5F9520"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/namem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@android:drawable/screen_background_light_transparent"
            android:editable="false"
            android:hint="Enter name"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            tools:ignore="Deprecated" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/profiletext"
        android:elevation="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/yeonsungregular"
            android:gravity="center"
            android:text="Address"
            android:textColor="#5F9520"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/addressm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="2"
            android:background="@android:drawable/screen_background_light_transparent"
            android:editable="false"
            android:hint="Enter address"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:textColor="@color/black"
            tools:ignore="Deprecated" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/profiletext"
        android:elevation="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/yeonsungregular"
            android:gravity="center"
            android:text="Phone No."
            android:textColor="#5F9520"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@android:drawable/screen_background_light_transparent"
            android:editable="false"
            android:hint="Enter email"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            tools:ignore="Deprecated" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/profiletext"
        android:elevation="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/yeonsungregular"
            android:gravity="center"
            android:text="Mode of payment"
            android:textColor="#5F9520"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/paymentmode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="Cash On Delhivery"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/profiletext"
        android:elevation="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/yeonsungregular"
            android:gravity="center"
            android:text="Total Payable Amount"
            android:textColor="#5F9520"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/yeonsungregular"
            android:gravity="right"
            android:paddingRight="50dp"
            android:text="$50"
            android:textColor="#8BC34A"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/profiletext"
        android:fontFamily="@font/yeonsungregular"
        android:text="Place the Order"
        android:textColor="#6CAB25"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>
