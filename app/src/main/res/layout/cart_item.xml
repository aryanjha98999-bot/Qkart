<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        <TextView
            android:id="@+id/foodnameid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="sans-serif-medium"
            android:text="Burger"
            android:textSize="18sp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/imageView4"
            app:layout_constraintTop_toTopOf="@id/imageView4"
            app:layout_constraintEnd_toStartOf="@id/trash" />

        <TextView
            android:id="@+id/priceid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="â‚¹50"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/foodnameid"
            app:layout_constraintTop_toBottomOf="@id/foodnameid" />

        <ImageButton
            android:id="@+id/minus"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/greenbuttongradient"
            android:contentDescription="Decrease quantity"
            android:padding="6dp"
            android:src="@drawable/outline_check_indeterminate_small_24"
            app:layout_constraintBottom_toBottomOf="@id/imageView4"
            app:layout_constraintStart_toEndOf="@id/imageView4" />

        <TextView
            android:id="@+id/datacountid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="1"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/minus"
            app:layout_constraintBottom_toBottomOf="@id/minus" />

        <ImageButton
            android:id="@+id/add"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/greenbuttongradient"
            android:contentDescription="Increase quantity"
            android:padding="6dp"
            android:src="@drawable/outline_add_24"
            app:layout_constraintBottom_toBottomOf="@id/minus"
            app:layout_constraintStart_toEndOf="@id/datacountid" />

        <ImageButton
            android:id="@+id/trash"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="Remove item"
            android:src="@drawable/trash_03"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
