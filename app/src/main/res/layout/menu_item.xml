<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">


    <TextView
        android:id="@+id/foodname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="92dp"
        android:text="Chicken Dum Biryani"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imagefood"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="NotSibling" />


    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¹260"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/addtocart"
        app:layout_constraintStart_toStartOf="@+id/addtocart"
        app:layout_constraintTop_toBottomOf="@+id/Restaurantname"
        app:layout_constraintVertical_bias="0.196" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addtocart"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="292dp"
        android:background="@drawable/greenbuttongradient"
        android:text="Add to Cart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imagefood"
        app:layout_constraintStart_toStartOf="@+id/Restaurantname"
        app:layout_constraintTop_toBottomOf="@+id/price"
        app:strokeColor="#E23744"
        app:strokeWidth="1dp"
        tools:ignore="NotSibling" />

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imagefood"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/b" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/Restaurantname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text=" Restaurant name"
        android:textColor="@color/primary_dark"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/foodname"
        app:layout_constraintTop_toBottomOf="@+id/foodname" />

